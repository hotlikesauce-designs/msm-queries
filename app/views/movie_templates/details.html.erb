<h1>
  Movie #<%=params.fetch("the_id")%> details
</h1>

<a href="/movies">
  Go back
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%=@the_movie.title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%=@the_movie.year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%=@the_movie.duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%=@the_movie.description%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%=@the_movie.image%> style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% matching_director = Director.where({ :id => @the_movie.director_id}) %>
    <%=matching_director.first.name%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@the_movie.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@the_movie.updated_at%>
  </dd>
</dl>

<hr>

  </body>
</html>
